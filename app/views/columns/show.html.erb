<%= render :partial => "application/header" %>
<h2>詳細画面</h2>
  
<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to 'TOPへ', columns_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集画面へ', edit_column_path(@column), class: 'btn btn-outline-dark' %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4><%= @column.title %></h4>
  </div>
  <div class="card-body">
    <p class="text"><%= image_tag @column.image.to_s, :size =>'150x150' %></p>
    <p class="card-text"><%= simple_format(@column.body) %></p>
    <p class="text"><%= @column.state %></p>
    <p class="text-right font-weight-bold mr-10"><%= @column.category %></p>
  </div>
</div>